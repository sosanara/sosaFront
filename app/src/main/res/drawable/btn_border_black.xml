<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item  android:top="1.3dp">
                <shape>
                    <solid android:color="@color/hintTextColor" />
                    <corners android:radius="2.5dp"/>
                </shape>
            </item>

            <!-- CONTENT LAYER -->
            <item android:bottom="1.3dp">
                <!--content-->
                <shape android:shape="rectangle">
                    <solid android:color="@color/btnBorderBlackColor"/>
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>




</selector>