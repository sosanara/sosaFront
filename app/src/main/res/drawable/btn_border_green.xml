<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--item pressed-->
    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:top="1.3dp">
                <shape>
                    <solid android:color="@color/btnClickShadowColor" />
                    <corners android:radius="2.5dp"/>
                </shape>
            </item>

                <!-- CONTENT LAYER -->
            <item android:bottom="1.3dp">
                    <!--content-->
                <shape android:shape="rectangle">
                    <solid android:color="@color/btnClickShadowColor"/>
                    <corners android:radius="2.5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:top="1.3dp">
                <shape>
                    <solid android:color="@color/btnClickShadowColor" />
                    <corners android:radius="2.5dp"/>
                </shape>
            </item>

            <!-- CONTENT LAYER -->
            <item android:bottom="1.3dp">
                <!--content-->
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary"/>
                    <corners android:radius="2.5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>