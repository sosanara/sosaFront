<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="360dp"
                android:layout_height="304.8dp"
                android:background="@drawable/main_bg"
                />

            <Button
                android:id="@+id/takePictureBtn"
                android:text="@string/take_picture"
                android:layout_width="300dp"
                android:layout_height="75dp"
                android:layout_marginLeft="30.3dp"
                android:layout_marginRight="30.3dp"
                android:layout_marginTop="31.2dp"
                android:textColor="@color/whiteColor"
                android:textSize="18.5sp"
                android:layout_gravity="center"
                android:onClick="startTakePicture"
                android:background="@drawable/btn_border_green"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/galleryBtn"
                    android:layout_width="99.8dp"
                    android:layout_height="103.9dp"
                    android:layout_marginTop="54.2dp"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/main_gallery"/>

                <ImageButton
                    android:id="@+id/historyBtn"
                    android:layout_width="99.3dp"
                    android:layout_height="114.6dp"
                    android:layout_marginTop="43.8dp"
                    android:layout_marginLeft="4.5dp"
                    android:background="@drawable/main_history"/>

                <ImageButton
                    android:id="@+id/statisticsBtn"
                    android:layout_width="99.8dp"
                    android:layout_height="101.8dp"
                    android:layout_marginTop="56.8dp"
                    android:layout_marginLeft="4.9dp"
                    android:background="@drawable/main_statistics"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/networkCheckLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/network_disconnect"
            android:visibility="gone"
            >

            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="474dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="다시 시도하기"
                android:id="@+id/networkCheckBtn"
                android:onClick="networkCheck"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
