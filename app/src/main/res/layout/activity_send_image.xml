<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" >

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/whiteColor"
            android:text="@string/toolbar_picture_confirm"
            android:textSize="17.5sp"
            android:gravity="center_horizontal"/>
    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sendImageView"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:src="@drawable/camera_crop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/retryBtn"
                    android:text="@string/retry_take_picture"
                    android:layout_width="145dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="35.5dp"
                    android:textColor="@color/whiteColor"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:onClick="retryImage"
                    android:background="@drawable/btn_border_green" />

                <Button
                    android:id="@+id/sendImageBtn"
                    android:text="@string/result_confirm"
                    android:layout_width="145dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10.3dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="35.5dp"
                    android:textColor="@color/whiteColor"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:onClick="sendImage"
                    android:background="@drawable/btn_border_green"/>
            </LinearLayout>

            <!--<ImageView
                android:id="@+id/resultImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/camera_crop"
                />-->



        </LinearLayout>

        <LinearLayout
            android:id="@+id/networkCheckLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/network_disconnect"
            android:visibility="gone"
            >

            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="474dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="다시 시도하기"
                android:id="@+id/networkCheckBtn"
                android:onClick="networkCheck"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>