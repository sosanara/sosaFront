<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/toolbar_history_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:textColor="@color/whiteColor"
            android:text="@string/toolbar_history_detail"
            android:textSize="17.5sp"
            android:layout_gravity="center" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/btnClickShadowColor"></LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/currentImageView"
                    android:layout_width="157.8dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="25.3dp"
                    android:layout_marginLeft="19.8dp" />

                <LinearLayout
                    android:layout_width="157.8dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="24.8dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/history_result">

                    <TextView
                        android:text="@string/bald_progress"
                        android:textSize="18sp"
                        android:textColor="@color/textViewColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="45.8dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/currentPercentView"
                        android:text="-------------"
                        android:textSize="30sp"
                        android:textColor="@color/notCompareColor"
                        android:layout_width="157.8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/currentCreateDateView"
                        android:text="2016.05.08"
                        android:textSize="16sp"
                        android:textColor="@color/notCompareColor"
                        android:layout_width="157.8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/firstImageView"
                    android:layout_width="116.9dp"
                    android:layout_height="150.dp"
                    android:layout_marginTop="39.8dp"
                    android:layout_marginLeft="40dp"
                />

                <ImageView
                    android:id="@+id/beforeImageView"
                    android:layout_width="116.9dp"
                    android:layout_height="150.dp"
                    android:layout_marginTop="39.8dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="40dp"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/history_line"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="157.8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19.8dp"
                        android:text="@string/first_contrast"
                        android:textSize="17sp"
                        android:textColor="@color/textViewColor"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="157.8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="19.8dp"
                        android:text="@string/before_contrast"
                        android:textSize="17sp"
                        android:textColor="@color/textViewColor"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/onlyOneDataView"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="29.3dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/notCompareColor"
                        android:text="@string/notCompareData"
                        android:textSize="13sp"
                        android:textColor="@color/textViewColor"
                        android:gravity="center"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comparePercentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/firstPercentView"
                        android:layout_width="157.8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-25dp"
                        android:layout_marginLeft="19.8dp"
                        android:text="-------------"
                        android:textColor="@color/whiteColor"
                        android:gravity="center"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/beforePercentView"
                        android:layout_width="157.8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-25dp"
                        android:layout_marginRight="19.8dp"
                        android:text="-------------"
                        android:textColor="@color/whiteColor"
                        android:gravity="center"
                        android:textSize="25sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/compareCreateDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/firstCreateDateView"
                        android:layout_width="157.8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-14dp"
                        android:layout_marginLeft="19.8dp"
                        android:text="-------------"
                        android:gravity="center"
                        android:textSize="13.5sp"
                        android:textColor="@color/whiteColor"/>

                    <TextView
                        android:id="@+id/beforeCreateDateView"
                        android:layout_width="157.8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-14dp"
                        android:layout_marginRight="19.8dp"
                        android:text="-------------"
                        android:gravity="center"
                        android:textSize="13.5sp"
                        android:textColor="@color/whiteColor"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/networkCheckLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/network_disconnect"
            android:visibility="gone"
            >

            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="474dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="다시 시도하기"
                android:id="@+id/networkCheckBtn"
                android:onClick="networkCheck"
                />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
