<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/toolbar_history_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/whiteColor"
            android:text="@string/toolbar_history_detail"
            android:textSize="17.5sp"
            android:gravity="center_horizontal"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/currentImageView"
                android:layout_width="157.8dp"
                android:layout_height="200dp"
                android:layout_marginTop="25.3dp"
                android:layout_marginLeft="19.8dp" />

            <LinearLayout
                android:layout_width="157.8dp"
                android:layout_height="200dp"
                android:layout_marginTop="24.8dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:background="@drawable/history_result">

                <TextView
                    android:text="@string/bald_progress"
                    android:textSize="18sp"
                    android:textColor="@color/textViewColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="55.8dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/currentPercentView"
                    android:text="+100.00%"
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14.3dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/currentCreateDateView"
                    android:text="2016.05.08"
                    android:textSize="14sp"
                    android:textColor="@color/rectBorderColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.5dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/firstImageView"
                android:layout_width="116.9dp"
                android:layout_height="150.dp"
                android:layout_marginTop="39.8dp"
                android:layout_marginLeft="50.5dp" />

            <ImageView
                android:id="@+id/beforeImageView"
                android:layout_width="116.9dp"
                android:layout_height="150.dp"
                android:layout_marginTop="39.8dp"
                android:layout_marginLeft="25.1dp"
                android:layout_marginRight="50.6dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="62.8dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.6dp"
                android:layout_marginLeft="77.5dp"
                android:text="@string/first_contrast"
                android:textSize="17sp"
                android:textColor="@color/textViewColor"/>

            <TextView
                android:layout_width="62.8dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.6dp"
                android:layout_marginLeft="79.3dp"
                android:layout_marginRight="77.8dp"
                android:text="@string/before_contrast"
                android:textSize="17sp"
                android:textColor="@color/textViewColor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstPercentView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="65dp"
                android:text="+100.0%"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/beforePercentView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="47dp"
                android:layout_marginRight="65dp"
                android:text="-100.0%"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstCreateDateView"
                android:layout_width="69.3dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="75.3dp"
                android:text="2016.02.14"
                android:textSize="13.5sp"
                android:textColor="@color/rectBorderColor"/>

            <TextView
                android:id="@+id/beforeCreateDateView"
                android:layout_width="69.3dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="74.5dp"
                android:layout_marginRight="75.3dp"
                android:text="2016.02.14"
                android:textSize="13.5sp"
                android:textColor="@color/rectBorderColor"/>

        </LinearLayout>
        
        <!--<Button
            android:layout_width=""
            android:layout_height="" />-->

    </LinearLayout>
    
    





</LinearLayout>
