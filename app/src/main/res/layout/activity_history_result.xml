<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/toolbar_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/whiteColor"
            android:text="@string/toolbar_result"
            android:textSize="17.5sp"
            android:gravity="center_horizontal"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="쑥쑥이님의 모발상태"
            android:textColor="@color/textViewColor"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black14Color"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/firstImageView"
                android:layout_width="157.8dp"
                android:layout_height="200dp"
                android:layout_marginTop="18.8dp"
                android:layout_marginLeft="19.8dp" />

            <ImageView
                android:id="@+id/lastImageView"
                android:layout_width="157.8dp"
                android:layout_height="200dp"
                android:layout_marginTop="18.8dp"
                android:layout_marginRight="19.8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="31.5dp"
                android:layout_height="20dp"
                android:layout_marginLeft="85.6dp"
                android:text="@string/bald_type"
                android:textColor="@color/textViewColor"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="78.3dp"
                android:layout_height="20dp"
                android:layout_marginLeft="95.6dp"
                android:layout_marginRight="69dp"
                android:text="@string/bald_progress"
                android:textColor="@color/textViewColor"
                android:textSize="17sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/baldType"
                android:text="가르마형"
                android:textColor="@color/colorPrimary"
                android:layout_width="92dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="55.5dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/baldProgress"
                android:text="32%"
                android:textColor="@color/colorPrimary"
                android:layout_width="78.3dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="78.3dp"
                android:layout_marginRight="69dp"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/galleryBtn"
                android:layout_width="99.8dp"
                android:layout_height="103.9dp"
                android:layout_marginTop="53.5dp"
                android:layout_marginLeft="26dp"
                android:background="@drawable/main_gallery"/>

            <ImageButton
                android:id="@+id/historyBtn"
                android:layout_width="99.3dp"
                android:layout_height="114.6dp"
                android:layout_marginTop="43dp"
                android:layout_marginLeft="4.5dp"
                android:background="@drawable/main_history"/>

            <ImageButton
                android:id="@+id/statisticsBtn"
                android:layout_width="99.8dp"
                android:layout_height="101.8dp"
                android:layout_marginTop="56dp"
                android:layout_marginLeft="4.9dp"
                android:background="@drawable/main_statistics"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>
