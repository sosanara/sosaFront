                android:layout_marginLeft="221.3dp"
                android:layout_marginTop="10.3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="39.8dp"
                android:text="100.0%"
                android:textColor="@color/myPrimaryColor"
                android:textSize="37.5sp"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="57.5dp"
            android:text="20대의 평균 탈모진행률"
            android:textColor="#ffffff"
