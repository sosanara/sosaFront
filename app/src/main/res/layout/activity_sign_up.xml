<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wholeLayout">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" >

       <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/whiteColor"
            android:text="@string/toolbar_sign_up"
            android:textSize="17.5sp"
            android:gravity="center_horizontal" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/toolbar_shadow"/>

            <EditText
                android:id="@+id/signUpUserNameView"
                android:hint="@string/id"
                android:textColorHint="@color/hintTextColor"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="29.5dp"
                android:paddingLeft="18.3dp"
                android:textSize="16sp"
                android:maxLength="17"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_border"
               />

            <EditText
                android:id="@+id/signUpPawd1View"
                android:hint="@string/pawd"
                android:textColorHint="@color/hintTextColor"
                android:inputType="textPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10.8dp"
                android:paddingLeft="18.3dp"
                android:textSize="16sp"
                android:maxLength="17"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_border"/>

            <EditText
                android:id="@+id/signUpPawd2View"
                android:hint="@string/confirm_pawd"
                android:textColorHint="@color/hintTextColor"
                android:inputType="textPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10.8dp"
                android:paddingLeft="18.3dp"
                android:textSize="16sp"
                android:maxLength="17"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_border"/>

            <EditText
                android:id="@+id/signUpNameView"
                android:hint="@string/name"
                android:textColorHint="@color/hintTextColor"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10.8dp"
                android:paddingLeft="18.3dp"
                android:textSize="16sp"
                android:maxLength="17"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_border"/>

            <EditText
                android:id="@+id/signUpEmailView"
                android:hint="@string/email"
                android:textColorHint="@color/hintTextColor"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10.8dp"
                android:paddingLeft="18.3dp"
                android:textSize="16sp"
                android:maxLength="25"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_border"/>




            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10.8dp"
                android:layout_gravity="center"
                android:background="@drawable/text_border">

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:paddingLeft="18.3dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:color = "@color/hintTextColor">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="성별"
                        android:color = "@color/hintTextColor"
                        android:layout_gravity="center_vertical"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="43dp"
                        android:id="@+id/maleRadioBtn"
                        android:text="남성"
                        android:textColor="@color/hintTextColor"
                        android:color = "#e1e8ee"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33.8dp"
                        android:id="@+id/femaleRadioBtn"
                        android:text="여성"
                        android:textColor="@color/hintTextColor"
                        android:color="#e1e8ee"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/text_border">
                <Spinner
                    android:id="@+id/ageSpinner"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:paddingLeft="12.3dp"
                    android:paddingRight="18.3dp"/>

            </LinearLayout>

            <Button
                android:text="@string/sign_up_complete"
                android:textColor="@color/whiteColor"
                android:id="@+id/loginBtn"
                android:layout_marginTop="30dp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:onClick="startSignup"
                android:background="@drawable/btn_border_grey_to_green" />

            <!--android:layout_below="@+id/password"-->

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/networkCheckLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/network_disconnect"
        android:visibility="gone"
        >

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="474dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="다시 시도하기"
            android:textColor="@color/whiteColor"
            android:background="@drawable/btn_border_black"
            android:id="@+id/networkCheckBtn"
            android:onClick="networkCheck"
            />
    </LinearLayout>
</FrameLayout>
</LinearLayout>
