<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools=" http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:background="@drawable/login_bg"/>-->
        
        <ImageView
            android:layout_width="360dp"
            android:layout_height="246.2dp"
            android:background="@drawable/login_bg"
            />

        <TextView
            android:text="내 머리를 지켜주는"
            android:layout_width="138dp"
            android:layout_height="20dp"
            android:layout_marginTop="25.4dp"
            android:textSize="17sp"
            android:textColor="@color/subTextColor"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/AppTheme.Widget.TextView"
            />

        <ImageView
            android:layout_width="149.3dp"
            android:layout_height="20dp"
            android:layout_marginTop="4.3dp"
            android:background="@drawable/logo_sosanara"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/loginUserNameView"
            android:background="@drawable/text_border"
            android:hint="@string/id"
            android:textColorHint="@color/hintTextColor"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="33.8dp"
            android:paddingLeft="18.3dp"
            android:paddingRight="18.3dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            style="@style/AppTheme.Widget.TextView"/>

        <EditText
            android:id="@+id/loginPawdView"
            android:background="@drawable/text_border"
            android:hint="@string/pawd"
            android:textColorHint="@color/hintTextColor"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10.8dp"
            android:paddingLeft="18.3dp"
            android:paddingRight="18.3dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            style="@style/AppTheme.Widget.TextView"/>

        <Button
            android:id="@+id/loginBtn"
            android:text="@string/login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10.8dp"
            android:paddingLeft="18.3dp"
            android:paddingRight="18.3dp"
            android:textColor="@color/whiteColor"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:onClick="startLogin"
            android:background="@drawable/btn_border_green"
            style="@style/AppTheme.Widget.Button"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/signUp"
                    android:layout_width="58dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="52.5dp"
                    android:layout_marginTop="23.8dp"
                    android:text="@string/sign_up"
                    android:textColor="@color/colorPrimary"
                    style="@style/AppTheme.Widget.TextView"/>

                <TextView
                    android:id="@+id/findPawd"
                    android:layout_width="87dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="110.3dp"
                    android:layout_marginTop="23.8dp"
                    android:text="@string/find_password"
                    android:textColor="@color/colorPrimary"
                    style="@style/AppTheme.Widget.TextView"/>

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/networkCheckLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/network_disconnect"
        android:visibility="gone"
        >

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="474dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="다시 시도하기"
            android:id="@+id/networkCheckBtn"
            android:onClick="networkCheck"
            style="@style/AppTheme.Widget.Button"
            />
    </LinearLayout>
</FrameLayout>

</LinearLayout>
